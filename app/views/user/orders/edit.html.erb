<h3>Please choose the new shipping address!</h3>

<%= form_tag profile_orders_path, method: :patch do %>
  <%= hidden_field_tag :address_id, @order.address_id %>
  <%= hidden_field_tag :id, @order.id %>
  <%= label_tag :nickname %>
  <%= select_tag :nickname, options_for_select(["home", "office", "school"]) %>
  <%= submit_tag "Save" %>
<% end %>
