<%= form_tag profile_path, method: :patch do %>
  <%= hidden_field_tag :id, @address.id %>

  <%= label_tag :street %>
  <%= text_field_tag :street, params[:street] %>

  <%= label_tag :city %>
  <%= text_field_tag :city, params[:city] %>

  <%= label_tag :state %>
  <%= text_field_tag :state, params[:state] %>

  <%= label_tag :zip %>
  <%= number_field_tag :zip, params[:zip] %>

  <%= label_tag :nickname %>
  <%= select_tag :nickname, options_for_select(["home", "office", "school"]) %>

  <%= submit_tag "Save Changes" %>

<% end %>
